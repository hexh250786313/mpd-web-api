{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "outDir": "lib",
        "rootDir": "src",
        "lib": ["es2017"],
        "sourceMap": true,
        "declaration": false
    },
    "typeRoots": [
        "node_modules",
        "node_modules/@types",
        "definitions",
        "./src/types"
    ],
    "include": ["src/**/*.ts", "src/*.ts"],
    "exclude": ["node_modules", "lib", "__tests__", "__mocks__"],
    "extends": "@tsconfig/recommended/tsconfig.json"
}
